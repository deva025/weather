<!DOCTYPE html>
<html>
<head>
<title>Page Title</title>
<style>
    
/* ... Your existing styles ... */
footer {
  text-align: center;
  padding: 3px;
  background-color: DarkSalmon;
  color: white;
}
ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333;
}

li {
  float: left;
}

li a {
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

li a:hover {
  background-color: #111;
}
/* Loader styles */
/* Loader styles */
.loader {
  border: 4px solid #f3f3f3;
  border-top: 4px solid #3498db;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  animation: spin 1s linear infinite;
  margin: 20px auto;
  display: none; /* Hide the loader by default */
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

</style>
</head>
<body>
<ul>
  <li><a  href="/">Home</a></li>
</ul>
<h1>{{title}}</h1>
<p>{{name}}</p>
<form id="myForm">
  <label for="fname">enter the name of a country:</label><br>
  <input type="text" id="fname" name="fname" ><br>
  <input type="submit" value="Submit">
</form>

<!-- Loader element -->
<div class="loader" id="loader"></div>

<h2 id="dp"> </h2>
<h2 id="dp1"></h2>

<footer>
  <p>Deva deekshith<br></p>
</footer>
<script>
function deva(event) {
  event.preventDefault();
  
  var firstName = document.getElementById("fname").value;

  if (firstName !== '') {
    const iop = 'http://localhost:3000/deva?address=india';
    const weatherl = iop.replace('india', firstName);

    // Display the loader
    document.getElementById("loader").style.display = "block";
    
    fetch(weatherl).then((Response) => {
      Response.json().then((data) => {
        document.getElementById("dp").textContent = "the temperature in celsius: " + data.address;
        document.getElementById("dp1").textContent = "coordinates " + data.dva + ", " + data.lkjhgfgh;
        
        // Hide the loader
        document.getElementById("loader").style.display = "none";
      });
    });
  }
}

document.getElementById("myForm").addEventListener("submit", deva);
</script>
</body>
